{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "defaultValue": "AzureLinuxApp",
      "metadata": {
        "description": "Base name of the resource such as web app name and app service plan "
      },
      "minLength": 2
    },
    "sku": {
      "type": "string",
      "defaultValue": "P1v2",
      "metadata": {
        "description": "The SKU of App Service Plan "
      }
    },
    "linuxFxVersion": {
      "type": "string",
      "defaultValue": "DOTNETCORE|3.1",
      "metadata": {
        "description": "The Runtime stack of current web app"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "AppServicePlan Name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "aadClientId": {
      "type": "string",
      "defaultValue": "aadClientId",
      "metadata": {
        "description": "AAD Client ID"
      }
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": "keyVaultName",
      "metadata": {
        "description": "KeyVault Name"
      }
    },
    "keyVaultLocation": {
      "type": "string",
      "defaultValue": "keyVaultLocation",
      "metadata": {
        "description": "KeyVault Location"
      }
    },
    "certificateName": {
      "type": "string",
      "defaultValue": "certificateName",
      "metadata": {
        "description": "Certificate Name"
      }
    },
    "keyVaultResourceId": {
      "type": "string",
      "defaultValue": "keyVaultResourceId",
      "metadata": {
        "description": "KeyVault ResourceId"
      }
    },
    "certificateSecretName": {
      "type": "string",
      "defaultValue": "certificateSecretName",
      "metadata": {
        "description": "Certificate Secret Name"
      }
    },
    "certificatePassword": {
      "type": "string",
      "defaultValue": "certificatePassword",
      "metadata": {
        "description": "Certificate Password"
      }
    },
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring"
    },
    "IcmApiPackageFolder": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "WebDeploy package location. This path is relative to the _artifactsLocation parameter"
      }
    },
    "IcmApiPackageFileName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Name of the webdeploy package"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "tags": {
        "displayName": "AppServicePlan"
      },
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "identity": {
        "type": "SystemAssigned"
      },
      "apiVersion": "2018-11-01",
      "tags": {
        "displayName": "Website"
      },
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "kind": "app",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "[parameters('linuxFxVersion')]",
          "use32BitWorkerProcess": false, //Enable 64 bit?
          "alwaysOn": true,
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "MSIKeyVaultUrl",
              "value": "https://cosmicdev.vault.azure.net/"
            },
            {
              "name": "WEBSITE_LOAD_CERTIFICATES",
              "value": "68977EAF63C0B117CF409C630F862DC1C8AEA4D6"
            }
          ]
        },
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2018-11-01",
      "name": "[concat(parameters('webAppName'), '/authsettings')]",
      "tags": {
        "displayName": "WebsiteAuthSettings"
      },
      "location": "[parameters('location')]",
      "dependsOn": [ "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]" ],
      "properties": {
        "enabled": true,
        "defaultProvider": "AzureActiveDirectory",
        "unauthenticatedClientAction": "RedirectToLoginPage",
        "tokenStoreEnabled": true,
        "clientId": "[parameters('aadClientId')]",
        "issuer": "[concat('https://sts.windows.net/', subscription().tenantId, '/')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/accessPolicies",
      "name": "[concat(parameters('keyVaultName'), '/add')]",
      "apiVersion": "2019-09-01",
      "location": "[parameters('keyVaultLocation')]",
      "tags": {
        "displayName": "KeyVault"
      },
      "properties": {
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantid]",
            "objectId": "[reference(resourceId('Microsoft.Web/sites', parameters('webAppName')),'2019-08-01', 'full').identity.principalId]",
            "permissions": {
              "keys": [],
              "secrets": [
                "get",
                "list"
              ],
              "certificates": []
            }
          }
        ]
      },
      "dependsOn": [ "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]" ]
    }
  ]
}
