{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "defaultValue": "AzureLinuxApp",
      "metadata": {
        "description": "Base name of the resource such as web app name and app service plan "
      },
      "minLength": 2
    },
    "use32BitWorkerProcess": {
      "type": "string",
      "defaultValue": "true",
      "metadata": {
        "description": "use32BitWorkerProcess"
      }
    },
    "enableLinuxWebApp": {
      "type": "string",
      "defaultValue": "true",
      "metadata": {
        "description": "enableLinuxWebApp"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "P1v2",
      "metadata": {
        "description": "The SKU of App Service Plan "
      }
    },
    "linuxFxVersion": {
      "type": "string",
      "defaultValue": "DOTNETCORE|3.1",
      "metadata": {
        "description": "The Runtime stack of current web app"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "AppServicePlan Name"
      }
    },
    "appServicePlanKind": {
      "type": "string",
      "defaultValue": "app",
      "metadata": {
        "description": "App service plan type"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "aadClientId": {
      "type": "string",
      "defaultValue": "aadClientId",
      "metadata": {
        "description": "AAD Client ID"
      }
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": "keyVaultName",
      "metadata": {
        "description": "KeyVault Name"
      }
    },
    "keyVaultLocation": {
      "type": "string",
      "defaultValue": "keyVaultLocation",
      "metadata": {
        "description": "KeyVault Location"
      }
    },
    "keyVaultResourceGroupName": {
      "type": "string",
      "defaultValue": "keyVaultResourceGroupName",
      "metadata": {
        "description": "KeyVault ResourceGroup Name"
      }
    },
    "userAssignedResourceName": {
      "type": "string",
      "defaultValue": "userAssignedIdentity",
      "metadata": {
        "description": "User Assigned Managed Service Identity Name"
      }
    },
    "deployUAMI": {
      "type": "string",
      "defaultValue": "deployUAMI",
      "metadata": {
        "description": "deployUAMI True/False"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "tags": {
        "displayName": "AppServicePlan"
      },
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "[parameters('appServicePlanKind')]",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "[parameters('userAssignedResourceName')]",
      "condition": "[equals(parameters('deployUAMI'),'True')]",
      "location": "[parameters('location')]",
      "tags": {
        "displayName": "userAssignedManagedIdentity"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('userAssignedResourceName'))]": {}
        }
      },
      "apiVersion": "2018-11-01",
      "tags": {
        "displayName": "Website"
      },
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "kind": "app",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('userAssignedResourceName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "use32BitWorkerProcess": "[parameters('use32BitWorkerProcess')]",
          "alwaysOn": true,
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "MSIKeyVaultUrl",
              "value": "https://cosmicdev.vault.azure.net/"
            }
          ]
        },
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2018-11-01",
      "name": "[concat(parameters('webAppName'), '/authsettings')]",
      "tags": {
        "displayName": "WebsiteAuthSettings"
      },
      "location": "[parameters('location')]",
      "dependsOn": [ "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]" ],
      "properties": {
        "enabled": true,
        "defaultProvider": "AzureActiveDirectory",
        "unauthenticatedClientAction": "RedirectToLoginPage",
        "tokenStoreEnabled": true,
        "clientId": "[parameters('aadClientId')]",
        "issuer": "[concat('https://sts.windows.net/', subscription().tenantId, '/')]"
      }
    },
    {
      "condition": "[equals(parameters('enableLinuxWebApp'),'True')]",
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2018-11-01",
      "name": "[concat(parameters('webAppName'), '/linuxSettings')]",
      "tags": {
        "displayName": "LinuxSettings"
      },
      "location": "[parameters('location')]",
      "dependsOn": [ "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]" ],
      "properties": {
          "linuxFxVersion": "[parameters('linuxFxVersion')]",
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "[concat('KeyVaultAccessPoliciesAdd-', parameters('userAssignedResourceName'))]",
      "subscriptionId": "[subscription().subscriptionId]",
      "resourceGroup": "[parameters('keyVaultResourceGroupName')]",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.KeyVault/vaults/accessPolicies",
              "name": "[concat(parameters('keyVaultName'), '/add')]",
              "apiVersion": "2016-10-01",
              "location": "[parameters('keyVaultLocation')]",
              "tags": {
                "displayName": "KeyVaultAccessPoliciesAdd"
              },
              "properties": {
                "accessPolicies": [
                  {
                    "tenantId": "[subscription().tenantid]",
                    "objectId": "[reference(concat('Microsoft.ManagedIdentity/userAssignedIdentities/', parameters('userAssignedResourceName')), '2018-11-30').principalId]",
                    "permissions": {
                      "keys": [],
                      "secrets": [
                        "get",
                        "list"
                      ],
                      "certificates": []
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    }
  ]
}
